@model GiaiKhatNgocMai.Areas.BackendSite.Models.ViewModelBase
@{ var user = GiaiKhatNgocMai.Infrastructure.Utils.CacheHelper._CacheHelper.GetLoggedInUser(); }
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en" class="no-js">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>Giải khát Ngọc Mai</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="meothailand" name="author" />
    <meta name="MobileOptimized" content="320">
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="@Href("~/Content/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Href("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Href("~/Content/plugins/uniform/css/uniform.default.css")" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGIN STYLES -->
    <link href="@Href("~/Content/plugins/gritter/css/jquery.gritter.css")" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGIN STYLES -->
    <!-- BEGIN THEME STYLES -->
    <link href="@Href("~/Content/css/style-metronic.css")" rel="stylesheet" type="text/css" />
    <link href="@Href("~/Content/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Href("~/Content/css/style-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Href("~/Content/css/plugins.css")" rel="stylesheet" type="text/css" />
    <link href="@Href("~/Content/css/pages/tasks.css")" rel="stylesheet" type="text/css" />
    <link href="@Href("~/Content/css/themes/default.css")" rel="stylesheet" type="text/css" id="style_color" />
    <link href="@Href("~/Content/css/custom.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/plugins/data-tables/DT_bootstrap.css")" />
    @RenderSection("customstyles", false)
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="@Href("~/Content/images/favicon.png")" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="page-header-fixed">
    <!-- BEGIN HEADER -->
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        <div class="header-inner">
            <!-- BEGIN LOGO -->
            <a class="navbar-brand" href="javascript:void();">
                <img src="@Href("~/Content/images/site_images/logo_text_small.png")" alt="logo" class="img-responsive" />
            </a>
            <!-- END LOGO -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <img src="@Href("~/Content/backend/img/menu-toggler.png")" alt="" />
            </a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN TOP NAVIGATION MENU -->
            <ul class="nav navbar-nav pull-right">
                <!-- BEGIN USER LOGIN DROPDOWN -->
                <li class="dropdown user">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        <img alt="" src="@Href("~/Content/images/site_images/avatar.jpg")" />
                        <span class="username">@user.UserName</span>
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="javascript:;"><i class="fa fa-bookmark"></i> @user.UserName</a>
                        </li>
                        <li class="divider">
                        </li>
                        <li>
                            <a href="javascript:;" id="trigger_fullscreen"><i class="fa fa-move"></i> Full screen mode</a>
                        </li>
                        <li>
                            <a href="/ManageSite/Credentials/Logout"><i class="fa fa-key"></i> Log out</a>
                        </li>
                    </ul>
                </li>
                <!-- END USER LOGIN DROPDOWN -->
            </ul>
            <!-- END TOP NAVIGATION MENU -->
        </div>
        <!-- END TOP NAVIGATION BAR -->
    </div>
    <!-- END HEADER -->
    <div class="clearfix">
    </div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        <div class="page-sidebar-wrapper">
            @{ Html.RenderPartial("_SideBarMenu", user.UserMenu); }
        </div>
        <!-- END SIDEBAR -->
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="page-content">
                <div class="portlet box messageBox">
                    <span class="messageBox">@ViewBag.Error</span>
                </div>
                @{ Html.RenderPartial("_PageHeader", Model.HeaderModel); }
                @RenderSection("content", required:true)
            </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    <div class="footer">
        <div class="footer-inner">
            2015 &copy; Giải khát Ngọc Mai powered by meothailand.
        </div>
        <div class="footer-tools">
            <span class="go-top">
                <i class="fa fa-angle-up"></i>
            </span>
        </div>
    </div>
    <!-- END FOOTER -->
    <!-- BEGIN CORE PLUGINS -->
    <script type="text/javascript">
        //initialize baseUrl for backend
        var backendBaseUrl = window.location.protocol + "//" + window.location.host + "@Request.ApplicationPath";
    </script>
    <!--[if lt IE 9]>
    <script src="@Href("~/Content/plugins/respond.min.js")"></script>
    <script src="@Href("~/Content/plugins/excanvas.min.js")"></script>
    <![endif]-->
    <script src="@Href("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Scripts/jquery-migrate-1.2.1.min.js")" type="text/javascript"></script>
    <!-- IMPORTANT! Load jquery-ui-1.10.3.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
    <script src="@Href("~/Content/plugins/jquery-ui/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/bootstrap-hover-dropdown/twitter-bootstrap-hover-dropdown.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/jquery-slimscroll/jquery.slimscroll.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/jquery.blockui.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/jquery.cokie.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/uniform/jquery.uniform.min.js")" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="@Href("~/Content/plugins/flot/jquery.flot.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/flot/jquery.flot.resize.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/jquery.pulsate.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/bootstrap-fileupload/bootstrap-fileupload.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/gritter/js/jquery.gritter.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/plugins/select2/select2.min.js")" type="text/javascript"></script>
    @RenderSection("customscripts", false)
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="@Href("~/Content/js/app.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/js/backend_handler.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var backendBaseUrl = window.location.protocol + "//" + window.location.host + '@Request.ApplicationPath' + 'backendsite/';
        jQuery(document).ready(function () {
            App.init(); // initlayout and core plugins
            //handler = backendHandler.init();
        });
    </script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>